
@{
    ViewBag.Title = "Add";
}
@using Account.Models
@model List<Account.Models.Roles>
<div class="navbar-collapse">
    <ul class=" breadcrumb">
        <li><a href="Home/Index">主页</a></li>
        <li><a href="Index">用户管理</a></li>
        <li class="active">添加用户信息</li>
    </ul>
</div>
@using (Html.BeginForm("Add", "UserInfo", FormMethod.Post, new { @class = "form-horizontal", id = "form1", enctype = "multipart/form-data" }))
{
    <div class="form-group ">
        @Html.Hidden("ID", null, new { @class = "form-control", onblur = "checkName()" })<span id="NameMsg" style="color:red"></span>
    </div>

    <div class="form-group ">
        <label>姓名：</label>
        @Html.TextBox("Name", null, new { @class = "form-control", onblur = "checkName()" })<span id="NameMsg" style="color:red"></span>
    </div>
    <div class="form-group ">
        <label>部门：</label>
        @Html.DropDownList("DepartmentID", ViewBag.modules as IEnumerable<SelectListItem>, "--请选择--", new { @class = "form-control" })
    </div>
    <div class="form-group ">
        <label>性别：</label>
        @Html.RadioButton("Sex", "True", true)  <label>男</label>
        @Html.RadioButton("Sex", "Fales", false)  <label>女</label>
    </div>
    <div class="form-group ">
        <label>账号：</label>
        @Html.TextBox("Account", null, new { @class = "form-control", onblur = "checkPassword1()" })<span id="Password1Msg" style="color:red"></span>

    </div>
    <div class="form-group ">
        <label>密码：</label>
        @Html.TextBox("Pwd", null, new { @class = "form-control", type = "password", onblur = "checkPassword1()" })<span id="Password1Msg" style="color:red"></span>
    </div>
    <div class="form-group ">
        <label>角色：</label>
        @foreach (var item in Model)
        {
            <input id="RoleID" type="checkbox" name="RoleID" value="@item.ID" />@item.Name
        }
    </div>
    <div class="form-group ">
        <label>照片：</label>
        <input id="Photo" type="file" name="Photo" />
    
    </div>
    <div class="form-group ">
        <label>备注：</label>
        @Html.TextArea("Remark", null, new { @class = "form-control", onblur = "checkIntro()" })

    </div>
    <div class="form-group ">
        <input id="submit" type="submit" value="提交" class="btn btn-primary btn-lg" />
    </div>

  

}

