@{
    ViewBag.Title = "Add";

}
<div class="navbar-collapse">
    <ul class=" breadcrumb">
        <li><a href="Home/Index">主页</a></li>
        <li><a href="Index">菜单管理</a></li>
        <li class="active">@ViewBag.i</li>
    </ul>
</div>
@using (Html.BeginForm("Add", "Menus", FormMethod.Post, new { @class = "form-horizontal", id = "form1", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Hidden("ID", null, new { @class = "form-control", onblur = "checkName()", })
    </div>
    <div class="form-group ">
        <label>名称：</label>
        @Html.TextBox("Name", null, new { @class = "form-control", onblur = "checkName()" })<span id="NameMsg" style="color:red"></span>
    </div>

    <div class="form-group ">
        <label>地址：</label>
        @Html.TextBox("Url", null, new { @class = "form-control", onblur = "checkPassword1()" })<span id="Password1Msg" style="color:red"></span>

    </div>
    <div class="form-group ">
        <label>Pid：</label>
        @Html.TextBox("PId", null, new { @class = "form-control", onblur = "checkPassword1()" })<span id="Password1Msg" style="color:red"></span>

    </div>
    <div class="form-group ">
        <label>备注：</label>
        @Html.TextArea("Remark", null, new { @class = "form-control", onblur = "checkIntro()" })

    </div>
    <div class="form-group ">
        <input id="submit" type="submit" value="提交" class="btn btn-primary btn-lg" />
    </div>

    

}
