
@{
    ViewBag.Title = "Edit";
    List<Account.Models.Roles> roles = ViewBag.list;
}
@using Account.Models
@model UserInfos
<div class="navbar-collapse">
    <ul class=" breadcrumb">
        <li><a href="Home/Index">主页</a></li>
        <li><a href="Index">用户管理</a></li>
        <li class="active">修改用户信息</li>
    </ul>
</div>
@using (Html.BeginForm("Edit", "UserInfo", FormMethod.Post, new { @class = "form-horizontal", id = "form1", enctype = "multipart/form-data" }))
{
   
    <div class="form-group">
        @Html.Hidden("ID", null, new { @class = "form-control", onblur = "checkName()", })
    </div>

    <div class="form-group ">
        <label>姓名：</label>
        @Html.TextBox("Name", null, new { @class = "form-control", onblur = "checkName()"})
    </div>
    <div class="form-group ">
        <label>部门：</label>
        @Html.DropDownList("DepartmentID", ViewBag.modules as IEnumerable<SelectListItem>, "--请选择--", new { @class = "form-control" })
    </div>
    <div class="form-group ">
        <label>性别：</label>
        @Html.RadioButton("Sex", "True", true)  <label>男</label>
        @Html.RadioButton("Sex", "Fales", false)  <label>女</label>
    </div>
    <div class="form-group ">
        <label>账号：</label>
        @Html.TextBox("Account", null, new { @class = "form-control", onblur = "checkPassword1()" })

    </div>
    <div class="form-group ">
        <label>密码：</label>
        @Html.TextBox("Pwd", null, new { @class = "form-control", type = "password", onblur = "checkPassword1()" })
    </div>
    <div class="form-group ">
        <label>角色：</label>
       
        @foreach (var item in roles)
        {
             var chenke = false;
            foreach (var items in ViewBag.rur)
            {
                if (item.ID == items.RoleID)
                {
                    chenke = true;
                    break;
                }
                else
                {
                    chenke = false;
                }
            }
            <input id="RoleID" type="checkbox" value="@item.ID" checked="@chenke" name="RoleID" />
            @item.Name      
        }

    </div>
    <div class="form-group ">
        <label>照片：</label>
        <input id="Photo" type="file" name="Photo" />
        <img src="/imgaes/@ViewBag.img" height="100" />
        <input type="hidden" value="@ViewBag.img" name="imgName" id="imaName" />
    </div>
    <div class="form-group ">
        <label>备注：</label>
        @Html.TextArea("Remark", null, new { @class = "form-control", onblur = "checkIntro()" })

    </div>
    <div class="form-group ">
        <input id="submit" type="submit" value="提交" class="btn btn-primary btn-lg" />
    </div>

    @*@Html.ValidationSummary();*@

}

