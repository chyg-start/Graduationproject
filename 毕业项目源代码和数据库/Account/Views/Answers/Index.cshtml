
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmax.cshtml";
}
@using Account.Models
@model PagedList.IPagedList<Account.Models.Answer>
@using PagedList.Mvc
  
<h2>审批试卷 </h2>
<table class="table">
    <tr>
        <th>学生姓名</th>
        <th>试卷</th>
        <th>提交时间</th>
        <th>试卷状态</th>
        <th>分数</th>
        <th>操作</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Student.StuName</td>
    <td>@item.Paper.PaperName</td>
    <td>@item.AnswerTime</td>
    <td>
        @if (item.AnswerState == 0)
        {
            @:答题中
        }
        else if (item.AnswerState == 1)
        {
            @:未批阅
        }
        else
        {
            @:已批阅
        }
    </td>
    <td>@item.AnswerScore</td>
    <td>
        @if (item.AnswerState == 1)
        {
            <a href="/Answers/TeAnswerDetail/@item.AnswerID">审卷</a>
        }
        else if (item.AnswerState == 2)
        {
            <a href="/Answers/TeAnswerDetail/@item.AnswerID">查看详情</a>
        }

    </td>
</tr>
    }

</table>
<div>
    @*分页主要代码*@
    每页 @Model.PageSize 条记录，共 @Model.PageCount 页，当前第 @Model.PageNumber 页
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
